<?xml version="1.0"?>
<registry>

    <record name="ftw.sliderblock.default_slick_config">
        <field type="plone.registry.field.Text">
            <title>Default Slick Config</title>
        </field>
        <value>{"autoplay": true, "autoplaySpeed": 2000}</value>
    </record>

    <record interface="ftw.simplelayout.interfaces.ISimplelayoutDefaultSettings" field="image_cropping_aspect_ratios">
        <value purge="False">
            <element key="ftw.slider.Pane">
                <element>16:9 => 1.777777778</element>
            </element>
        </value>
    </record>

    <record
        name="plone.types_not_searched"
        interface="Products.CMFPlone.interfaces.controlpanel.ISearchSchema"
        field="types_not_searched">
        <value>
            <element>ftw.sliderblock.SliderBlock</element>
        </value>
    </record>

    <records prefix="plone.resources/ftw-sliderblock-js"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="js">++plone++ftw.sliderblock/sliderblock.js</value>
        <value key="deps">jquery</value>
        <value key="css"></value>
    </records>

    <!--Add js and css resources to plone-legacy bundle
        This is done by some plone addons, but not sure it is good practise!
        FIXME: long term fix is to use requirejs in our JS and merge_with 'default' instead
     -->
    <records prefix="plone.bundles/plone-legacy"
             interface='Products.CMFPlone.interfaces.IBundleRegistry'>
        <value key="resources" purge="False">
            <element>ftw-sliderblock-js</element>
        </value>
        <value key="last_compilation"></value>
    </records>

</registry>
